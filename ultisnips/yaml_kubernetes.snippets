snippet aff "Affinitiy/Anti-Affinity" !b
pod${1:Anti}Affinity:
	${2:preferred|required}DuringSchedulingIgnoredDuringExecution:
	- weight: 100
		podAffinityTerm:
			labelSelector:
				matchExpressions:
				- key: ${3:app}
					operator: In
					values:
					- ${4:appname}
			topologyKey: ${5:kubernetes.io/hostname}
endsnippet

snippet hpa "Horizontal Pod Autoscaler" !b
apiVersion: autoscaling/v2beta1
kind: HorizontalPodAutoscaler
metadata:
	name: ${1:hpa-name}
	namespace: ${2:default}
spec:
	scaleTargetRef:
		apiVersion: apps/v1
		kind: Deployment
		name: ${3:deployment-name}
	minReplicas: 1
	maxReplicas: 10
	metrics:
	- type: Resource
		resource:
			name: cpu
			targetAverageUtilization: 10
	- type: Resource
		resource:
		name: memory
			targetAverageValue: 1000Mi
endsnippet

snippet ds "DaemonSet" !b
apiVersion: apps/v1
kind: DaemonSet
metadata:
	name: ${1:name}
	namespace: ${2:default}
	labels:
		app: $1
spec:
	selector:
		matchLabels:
			app: $1
	template:
		metadata:
			labels:
				app: $1
		spec:
			containers:
			- name: $1
				image: ${3:image/name}
				imagePullPolicy: IfNotPresent
				resources:
					limits:
						cpu: 100m
						memory: 100Mi
$0
endsnippet

snippet kzregcred "Kustomize regcred" !b
# This command will create the .dockerconfigjson file you'll need to use the following with Github
# container registry. It will only work if you're logged in to GHCR locally.
#   jq '.auths |= { "ghcr.io": ."ghcr.io" }' ~/.docker/config.json > .dockerconfigjson
# Run this command to see which registries you're logged in to:
#   jq -r '.auths | keys[] | .' ~/.docker/config.json
# You should be able to replace "ghcr.io" in the first command with any of those should you wish to
# use that registry. Note that you may need to modify the image you're using to come from your
# registry of choice.
secretGenerator:
- name: regcred
  type: kubernetes.io/dockerconfigjson
  files:
  - .dockerconfigjson

patches:
- patch: |-
    apiVersion: apps/v1
    kind: ${1:Deployment}
    metadata:
      name: $2
    spec:
      template:
        spec:
          imagePullSecrets:
          - name: regcred
endsnippet
