snippet job "Kubernetes Job" !b
apiVersion: batch/v1
kind: Job
metadata:
	name: ${1:jobname}
	labels:
		app.kubernetes.io/name: ${2:$1}
spec:
	template:
		metadata:
			app.kubernetes.io/name: $2
		spec:
			containers:
			- name: ${3:job}
				image: ${4: nginx}
				command:
				- ${5:"override"
				- "--the"
				- "entrypoint"}
			restartPolicy: OnFailure
endsnippet

snippet cron "Kubernetes Cronjob" !b
apiVersion: batch/v2alpha1
kind: CronJob
metadata:
	name: ${1:name}
spec:
	schedule: "${2:*/1} * * * *"
	jobTemplate:
		spec:
			template:
				spec:
					containers:
					- name: $1
						image: ${3: image}
						args: ${4:
						- /bin/sh
						- -c
						- date; echo Hello from the Kubernetes cluster}
					restartPolicy: OnFailure
endsnippet

