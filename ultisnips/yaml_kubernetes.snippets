snippet depsvcing "Deployment, service, and ingress" !b
apiVersion: apps/v1
kind: Deployment
metadata:
	name: ${1:my-application}
spec:
	replicas: 1
	selector:
		matchLabels:
			app.kubernetes.io/name: ${2:$1}
	template:
		metadata:
			labels:
				app.kubernetes.io/name: $2
		spec:
			containers:
			- name: ${3:app}
				image: ${4:nginx}
				ports:
				- containerPort: ${5:8080}
---
apiVersion: v1
kind: Service
metadata:
	name: $1
	labels:
		app.kubernetes.io/name: $2
spec:
	ports:
	- port: ${6:80}
		targetPort: $5
	selector:
		app.kubernetes.io/name: $2
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
	annotations:
		nginx.ingress.kubernetes.io/rewrite-target: /
		kubernetes.io/ingress.class: nginx
		cert-manager.io/cluster-issuer: "letsencrypt-prod"
	name: $1
spec:
	rules:
	- http:
			paths:
			- path: ${$7:/}
				pathType: Prefix
				backend:
					service:
						name: $1
						port:
							number: $6
endsnippet

